#! /usr/bin/env bash

if [[ ${MISE_TRACE-} == 1 ]]; then
  set -x
fi

set -euo pipefail

setup_nix() {
  local OLD_PATH=${PATH}

  FLAKE_NIX=${MISE_TOOL_OPTS__FLAKE_NIX:-${MISE_PROJECT_ROOT}/flake.nix}
  FLAKE_LOCK=${MISE_TOOL_OPTS__FLAKE_LOCK:-${MISE_PROJECT_ROOT}/flake.lock}

  read -r _ HASH < <(cat "${FLAKE_NIX}" "${FLAKE_LOCK}" | openssl sha256)

  # check hash to prevent unnecessarily re-sourcing environment
  HASH_FILE=${TMPDIR%/}/mise-nix-${HASH}

  if [[ ! -e ${HASH_FILE} ]]; then
    trap 'rm '"${HASH_FILE}" ERR INT TERM
    nix print-dev-env \
      --file "${FLAKE_NIX}" \
      --reference-lock-file "${FLAKE_LOCK}" \
      > "${HASH_FILE}"
    trap - ERR INT TERM
  fi

  # shellcheck source=/dev/null
  source "${HASH_FILE}"

  export MISE_ADD_PATH=${PATH%"${OLD_PATH}"}
}

setup_nix
